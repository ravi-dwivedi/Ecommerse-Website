@model Ecommerce.SubCategory

<h3>Are you sure you want to delete this?</h3>

<div class="display-label">
    <h2>  @Html.DisplayNameFor(model => model.SubCategoryName)</h2>
</div>
<div class="display-field">
    <h3>   @Html.DisplayFor(model => model.SubCategoryName)</h3>
</div>

@{
    AjaxOptions ajaxOpts = new AjaxOptions
    {
        Url = Url.Action("DeleteSubCategory"),
        HttpMethod = "POST",
        OnSuccess = "showSavedResult(data)",
        OnFailure = "onFailure(data)"
    };
}

@using (Ajax.BeginForm(ajaxOpts))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()


    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" />
}
